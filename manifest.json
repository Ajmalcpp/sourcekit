{
  "name": "ChromePad - Text Editor Inside Chrome",
  "version": "0.1",
  "incognito": "split",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png"
    //"popup": "filelist.html"
  },
  "options_page": "options.html",
  "background_page": "background.html",
  "permissions": ["tabs",
    "notifications",
    "http://*.dropbox.com/",
    "https://*.dropbox.com/",
    "https://*.getdropbox.com/",
    "http://*.getdropbox.com/"
  ]
}